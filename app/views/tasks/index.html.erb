<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" <%=checked(task)%> disabled>
      <%= link_to(task.title, task_path(task))%>
      <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
        <%= fa_icon "trash"  %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to  "+ Add a new Task", new_task_path %>
